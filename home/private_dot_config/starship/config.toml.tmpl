command_timeout = 1000
palette = "catppuccin_mocha"

[username]
format = "[$user]($style) on "

[character]
{{ if eq .chezmoi.hostname "othalan" }}
success_symbol = "[ᛟ](bold fg:#f5e0dc)[ ](bold cyan)"
error_symbol = "[ᛟ](bold fg:red)[ !](bold red)"
{{ else if eq .chezmoi.hostname "algiz" }}
success_symbol = "[ᛉ](bold fg:#f5e0dc)[ ](bold cyan)"
error_symbol = "[ᛉ](bold fg:red)[ !](bold red)"
{{ else }}
success_symbol = "[⋈](bold fg:#f5e0dc)[ ](bold cyan)"
error_symbol = "[⋈](bold fg:red)[ !](bold red)"
{{ end }}

