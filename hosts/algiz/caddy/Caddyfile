	reverse_proxy http://localhost:4321
}

elizabeth.dayl.in, www.elizabeth-and-daylin.com {
	redir https://elizabeth-and-daylin.com{uri} permanent
}

www.dayl.in {
	redir https://dayl.in{uri}
}

